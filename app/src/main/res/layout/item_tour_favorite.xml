<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_tour_favorite"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:src="@drawable/nghinhphong"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_tour_favorite_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#354C6D"
            android:text="@string/app_name"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/tv_tour_favorite_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#354C6D"
            android:text="@string/tour_description"
            android:textAlignment="center"

            />

        <TextView
            android:id="@+id/tv_tour_favorite_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#3987D6"
            android:text="@string/tour_price"
            android:textAlignment="center"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>